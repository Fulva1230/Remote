<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller">

    <io.github.controlwear.virtual.joystick.android.JoystickView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:JV_buttonColor="#FF6E40"
            app:JV_buttonSizeRatio="15%"
            app:JV_borderColor="#00796B"
            app:JV_backgroundColor="#009688"
            app:JV_borderWidth="4dp"
            app:JV_fixedCenter="false"
            android:id="@+id/leftJoy"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="131dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="131dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/controller_text"
            app:layout_constraintHorizontal_bias="0.48"/>

    <TextView
            android:text="@string/controller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/controller_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="175dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="178dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.25"/>

    <io.github.controlwear.virtual.joystick.android.JoystickView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:JV_buttonColor="#FF6E40"
            app:JV_buttonSizeRatio="15%"
            app:JV_borderColor="#00796B"
            app:JV_backgroundColor="#009688"
            app:JV_borderWidth="4dp"
            app:JV_fixedCenter="false"
            android:id="@+id/rightJoy"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="131dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="131dp"
            app:layout_constraintHorizontal_bias="0.49"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>