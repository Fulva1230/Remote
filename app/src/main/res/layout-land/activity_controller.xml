<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller"
        android:id="@+id/controller"
        android:background="@android:color/darker_gray">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/servo2_inform"
            app:layout_constraintStart_toStartOf="@+id/servo2"
            app:layout_constraintEnd_toEndOf="@+id/servo2"
            app:layout_constraintBottom_toTopOf="@+id/servo2"
            android:layout_marginBottom="70dp"/>

    <io.github.controlwear.virtual.joystick.android.JoystickView
            android:layout_width="190dp"
            android:layout_height="197dp"
            app:JV_buttonColor="@android:color/background_light"
            app:JV_buttonSizeRatio="15%"
            app:JV_borderColor="#87CEFF"
            app:JV_backgroundColor="#87CEEB"
            app:JV_borderWidth="4dp"
            app:JV_fixedCenter="false"
            android:id="@+id/leftJoy"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <TextView
            android:text="@string/controller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/controller_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="175dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="178dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            android:textAlignment="center"/>

    <io.github.controlwear.virtual.joystick.android.JoystickView
            android:layout_width="190dp"
            android:layout_height="356dp"
            app:JV_buttonColor="@android:color/background_light"
            app:JV_buttonSizeRatio="15%"
            app:JV_borderColor="#87CEFF"
            app:JV_backgroundColor="#87CEEB"
            app:JV_borderWidth="4dp"
            app:JV_fixedCenter="false"
            android:id="@+id/rightJoy"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <TextView
            android:layout_width="157dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:id="@+id/leftJoyInform"
            app:layout_constraintBottom_toTopOf="@+id/leftJoy"
            app:layout_constraintStart_toStartOf="@+id/leftJoy"
            />

    <TextView
            android:layout_width="157dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:id="@+id/rightJoyInform"
            app:layout_constraintBottom_toTopOf="@+id/rightJoy"
            app:layout_constraintEnd_toEndOf="@+id/rightJoy"/>

    <SeekBar
            android:layout_width="150dp"
            android:layout_height="33dp"
            android:id="@+id/threshHold"
            app:layout_constraintStart_toStartOf="@+id/leftJoy"
            app:layout_constraintBottom_toTopOf="@+id/leftChangeDir"
            android:max="254"
            android:saveEnabled="true"/>

    <SeekBar
            android:layout_height="20dp"
            android:id="@+id/servo1"
            android:rotation="90"
            android:layout_width="150dp"
            app:layout_constraintTop_toTopOf="@+id/rightJoy"
            app:layout_constraintBottom_toBottomOf="@+id/rightJoy"
            app:layout_constraintVertical_bias="0.482"
            app:layout_constraintEnd_toEndOf="@+id/rightJoy"
            android:layout_marginEnd="150dp"
            android:progress="0"
            android:saveEnabled="true"/>

    <SeekBar
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:id="@+id/servo2"
            android:rotation="90"
            app:layout_constraintEnd_toEndOf="@+id/servo1"
            android:layout_marginEnd="100dp"
            app:layout_constraintTop_toTopOf="@+id/servo1"
            android:progress="50"
            android:saveEnabled="true"/>

    <SeekBar
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:id="@+id/servo3"
            android:rotation="90"
            app:layout_constraintTop_toTopOf="@+id/servo1"
            android:progress="50"
            app:layout_constraintEnd_toEndOf="@+id/servo2"
            android:layout_marginEnd="100dp"
            android:saveEnabled="true"/>

    <Switch
            android:text="@string/LEFT_DIR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leftChangeDir"
            app:layout_constraintStart_toStartOf="@+id/leftJoy"
            app:layout_constraintBottom_toTopOf="@+id/leftJoyInform"
            android:saveEnabled="true"/>

    <Switch
            android:text="@string/RIGHT_DIR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightChangeDir"
            app:layout_constraintEnd_toEndOf="@+id/rightJoy"
            app:layout_constraintBottom_toTopOf="@+id/rightJoyInform"
            android:saveEnabled="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/servo1_inform"
            app:layout_constraintStart_toStartOf="@+id/servo1"
            app:layout_constraintBottom_toTopOf="@+id/servo1"
            android:layout_marginBottom="70dp"
            app:layout_constraintEnd_toEndOf="@+id/servo1"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/servo3_inform"
            app:layout_constraintStart_toStartOf="@+id/servo3"
            app:layout_constraintEnd_toEndOf="@+id/servo3"
            app:layout_constraintBottom_toTopOf="@+id/servo3"
            android:layout_marginBottom="70dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>